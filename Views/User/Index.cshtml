@model IEnumerable<ShareVolt.Models.User>
@using System.Security.Claims

@{
    ViewData["Title"] = "Users Dashboard";

    var isAdminClaim = User.FindFirstValue("IsAdmin");
    bool isAdmin = (!string.IsNullOrEmpty(isAdminClaim) && isAdminClaim == "True");

    var userIdClaim = User.FindFirstValue(ClaimTypes.NameIdentifier);
    int currentUserId = (!string.IsNullOrEmpty(userIdClaim)) ? int.Parse(userIdClaim) : 0;
}

@if (!isAdmin)
{
    <div class="d-flex flex-column align-items-center justify-content-center mt-5">
        <i class="bi bi-shield-lock-fill text-danger display-3"></i>
        <h2 class="text-danger mt-3">Access Restricted</h2>
        <p class="text-muted">Only Admins can view the list of users.</p>
    </div>
}
else
{
    <div class="container mt-4">
        <h2 class="mb-3 text-primary">
            <i class="bi bi-people-fill"></i> All Users
        </h2>
        <p class="text-muted">List of registered users in the system</p>

        <div class="card shadow-lg">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.WalletBalance)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <i class="bi bi-person-circle text-primary"></i>
                                    <span class="fw-semibold">@item.Name</span>
                                </td>
                                <td>
                                    <i class="bi bi-envelope-fill text-muted"></i>
                                    @item.Email
                                </td>
                                <td>
                                    <span class="badge ">
                                        ₹@item.WalletBalance
                                    </span>
                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
