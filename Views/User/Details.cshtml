@model ShareVolt.Models.User
@using System.Security.Claims
@{
    // This ViewData will now set the title in the browser tab
    ViewData["Title"] = "User Details";

    var isAdminClaim = User.FindFirstValue("IsAdmin");
    bool isAdmin = !string.IsNullOrEmpty(isAdminClaim) && isAdminClaim == "True";

    var userIdClaim = User.FindFirstValue(ClaimTypes.NameIdentifier);
    int currentUserId = !string.IsNullOrEmpty(userIdClaim) ? int.Parse(userIdClaim) : 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShareVolt</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    @if (!isAdmin && Model.Id != currentUserId)
    {
        <div class="text-center mt-5">
            <h1 class="text-danger">Access Denied</h1>
            <p>You are not allowed to view this user's details.</p>
        </div>
        return;
    }

    <div class="container py-4">
        <h1 class="mb-4">User Details</h1>

        <div class="card shadow-sm mb-4">
            <div class="card-header bg-primary text-white">
                <strong>@Model.Name</strong>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Wallet Balance</dt>
                    <dd class="col-sm-9">₹ @Model.WalletBalance</dd>
                </dl>
            </div>
        </div>

        <div class="d-flex flex-wrap gap-3">
            @if (isAdmin)
            {
                <a asp-action="Index" class="btn btn-outline-secondary">Back to Users List</a>
            }
            else
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit Profile</a>
            }

            <a asp-area="" asp-controller="Charger" asp-action="UsersChargersIndex" asp-route-id="@currentUserId" class="btn btn-success">
                Your Chargers
            </a>

            <a asp-area="" asp-controller="Booking" asp-action="UsersBookingIndex" asp-route-id="@currentUserId" class="btn btn-info text-white">
                Your Bookings
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>