@model ShareVolt.Models.Booking
@using System.Security.Claims
@{
    ViewData["Title"] = "Delete Booking";
}

@{
    var isAdminClaim = User.FindFirstValue("IsAdmin");
    bool isAdmin = false;
    if (!string.IsNullOrEmpty(isAdminClaim))
    {
        isAdmin = (isAdminClaim == "True");
    }





    var userIdClaim = User.FindFirstValue(ClaimTypes.NameIdentifier);
    int currentUserId = 0;
    if (!string.IsNullOrEmpty(userIdClaim))
    {
        currentUserId = int.Parse(userIdClaim);
    }
}

<div class="container mt-4">
    <h2 class="text-danger">
        <i class="bi bi-exclamation-triangle-fill"></i> Delete Booking
    </h2>
    <p class="text-muted">Are you sure you want to delete this booking?</p>

    <div class="card shadow-lg border-danger mb-4">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Booking Details</h5>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Start Time</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StartTime)</dd>

                <dt class="col-sm-3">End Time</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EndTime)</dd>

                <dt class="col-sm-3">Total Amount</dt>
                <dd class="col-sm-9">₹@Html.DisplayFor(model => model.TotalAmount)</dd>

                <dt class="col-sm-3">Size Type</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SizeType)</dd>

                <dt class="col-sm-3">Battery Size</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.BatterySize)</dd>

                <dt class="col-sm-3">Battery %</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ExpectedBatteryPercentage) %</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-info text-dark">
                        @Html.DisplayFor(model => model.Status)
                    </span>
                </dd>

                <dt class="col-sm-3">Charger Location</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Charger.Location)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" class="d-flex gap-2">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Confirm Delete
        </button>
        <a asp-controller="Booking" asp-action="UsersBookingIndex" asp-route-id="@currentUserId" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
    </form>
</div>
